<div class="dashboard-jumbotron">
    <div class="dashboard-wrapper">
        <div class="asides">
            <aside class="user-info">
                <h2 class="username">
                    {{username}}
                </h2>
                <div class="goals">
                    <ul class="goals-list">
                        {{#each goals as |goal|}}
                        <li>{{goal}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="date-joined">
                    <span>Joined: {{format_date joinDate}}</span>
                </div>
                <div class="edit-profile-link">
                    <a href="/dashboard/profile/{{user_id}}"><i class="fas fa-user-edit"></i> Edit Info.</a>
                </div>
            </aside>

            <aside class="buddies">
                <h2 class="buddy-header">Buddy List</h2>
                <input type="text" class="add-buddy-input" id="add-buddy-input"><button class="add-buddy"><i class="fas fa-user-plus"></i></button>
                <ul class="buddy-list">
                    <li>Jane <button id="remove-buddy" type="submit"><i class="fas fa-user-times" data-toggle="modal" data-target="#remove-buddy-modal"></i></button></li>  
                    <li>Madison <button id="remove-buddy" type="submit"><i class="fas fa-user-times"></i></button></li>  
                    <li>Shipria <button id="remove-buddy" type="submit"><i class="fas fa-user-times"></i></button></li>   
                    <li>Leticia <button id="remove-buddy" type="submit"><i class="fas fa-user-times"></i></button></li>   
                    <li>Andrew <button id="remove-buddy" type="submit"><i class="fas fa-user-times"></i></button></li>    
                    <li>Jayson <button id="remove-buddy" type="submit"><i class="fas fa-user-times"></i></button></li>    
                </ul>
            </aside>
        </div>

        <div class="suggested-exercise">
            <h1>Try This Exercise!</h1>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. 
                Nobis molestias officia reprehenderit consequatur voluptatum 
                exercitationem, architecto, adipisci ex debitis consectetur 
                tenetur impedit nulla hic distinctio corrupti expedita sed 
                eveniet sunt?
            </p>
        </div>

        <div id="chart-container" class="stats-chart">
            <canvas id="myChart">
                
            </canvas>
        </div>

        {{!-- {{#if workouts.length }} --}}
        <section class="completed-workouts">
            <div class="completed-title">
                <p>Your Completed Workouts</p>
            </div>
            <ol>
                {{!-- {{#each workoouts as |workout|}} --}}
                <li class="completed-workout">
                    {{!-- {{> workout-info workout}} --}}
                </li>
                {{!-- {{/each}} --}}
            </ol>
        </section>
        {{!-- {{/if}} --}}
    </div>  
</div>

<!-- Modal -->
<div class="modal fade" id="remove-buddy-modal" tabindex="-1" role="dialog" aria-labelledby="remove-friend">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Remove Buddy From List</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to remove (buddy name)?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="remove-buddy-confirm">Remove</button>
        <button type="button" class="btn btn-primary">Keep Friend</button>
      </div>
    </div>
  </div>
</div>


