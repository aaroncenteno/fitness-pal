<div class="dashboard-jumbotron">
    <div class="dashboard-wrapper">
        <div class="asides">
            <aside class="user-info">
                <h2 class="username">
                    {{username}} <span class="hide req-session-id">{{id}}</span>
                </h2>
                <div class="goals">
                    <ul class="goals-list">
                        {{#each goals as |goal|}}
                        <li>{{goal}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="date-joined">
                    <span>Joined: {{format_date joinDate}}</span>
                </div>
                <div class="edit-profile-link">
                    <a href="/dashboard/profile/{{profile_id}}"><i class="fas fa-user-edit"></i> Edit Info.</a>
                </div>
            </aside>

            <aside class="buddies">
                <h2 class="buddy-header">Buddy List</h2>
                <input type="text" class="add-buddy-input" id="add-buddy-input"><button class="add-buddy-btn" id="add-buddy-btn" type="submit"><i class="fas fa-user-plus"></i></button>
                <ul class="buddy-list">
                    {{#each friends.buddies as |buddy|}}
                        <li class="added-buddy">{{buddy.buddy_name}} ID: {{buddy.buddy_id}} <button id="remove-buddy" type="submit" {{!-- data-toggle="modal" data-target="#remove-buddy-modal" --}}><i class="fas fa-user-times"></i></button></li>   
                    {{/each}}
                </ul>
            </aside>
        </div>

        <div class="suggested-exercise">
            <h1>Try This Exercise!</h1>
            <div>
                <span class="random-exercise"></span>
            </div>
            <div>
                <span class="random-instruction"></span>
            </div>
        </div>

        <div id="chart-container" class="stats-chart">
            <canvas id="myChart">
                
            </canvas>
            <button class="add-weight" data-toggle="modal" data-target="#add-weight"><i class="fas fa-plus"></i> Add a weight update!</button>
            <button class="remove-weight-btn" data-toggle="modal" data-target="#delete-weight-modal"><i><i class="fas fa-trash-alt"></i></i> Delete All Weight</button>
        </div>

        {{!-- {{#if workouts.length }} --}}
        <section class="completed-workouts">
            <div class="completed-title">
                <p>Your Completed Workouts</p>
            </div>
            <ol>
                {{!-- {{#each workouts as |workout|}} --}}
                <li class="completed-workout">
                    {{!-- {{> workout-info workout}} --}}
                </li>
                {{!-- {{/each}} --}}
            </ol>
        </section>
        {{!-- {{/if}} --}}
    </div>  
</div>

<!-- Modals -->

{{> add-weight-modal}}
{{> bad-search-modal}}
{{> confirm-add-buddy-modal}}
{{> remove-buddy-modal}}
{{> delete-weight-modal}}




